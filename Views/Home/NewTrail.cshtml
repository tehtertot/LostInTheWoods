@model lostInTheWoods.Models.Trail

<h1>Add a New Trail</h1>
<hr>
<div class="col-sm-8">
<form asp-action="AddTrail" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
        <input class="form-control" asp-for="Name" class="col-sm-4">
        <span class="rederror" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
        <textarea class="form-control" asp-for="Description"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Trail_Length" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-3">
        <input class="form-control" asp-for="Trail_Length">
        <span class="rederror" asp-validation-for="Trail_Length"></span>
        </div>
        <div class="col-sm-1">miles</div>
    </div>
    <div class="form-group row">
        <label asp-for="Elevation" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-3">
        <input class="form-control" asp-for="Elevation">
        <span class="rederror" asp-validation-for="Elevation"></span>
        </div>
        <div class="col-sm-1">feet</div>
    </div>
    <div class="form-group row">
        <label asp-for="Latitude" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-3">
        <input class="form-control" asp-for="Latitude">
        <span class="rederror" asp-validation-for="Latitude"></span>
        </div>
        <div class="col-sm-4">
            <label for="radio-inline">
            <input type="radio" class="form-check-input" name="NS" id="inlineRadio3" value="N">N+ &nbsp;&nbsp;&nbsp;&nbsp;
            </label>
            <label for="radio-inline">
            <input type="radio" class="form-check-input" name="NS" id="inlineRadio4" value="S">S-
            </label>
        </div>
    </div>
        <div class="form-group row">
        <label asp-for="Longitude" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-3">
        <input class="form-control" asp-for="Longitude">
        <span class="rederror" asp-validation-for="Longitude"></span>
        </div>
        <div class="col-sm-4">
            <label for="form-check-label">
            <input type="radio" class="form-check-input" name="EW" id="inlineRadio1" value="E">E+ &nbsp;&nbsp;&nbsp;&nbsp;
            </label>
            <label for="form-check-label">
            <input type="radio" class="form-check-input" name="EW" id="inlineRadio2" value="W">W-
            </label>
        </div>
    </div>
    <br>
    <input type="submit" class="btn btn-primary" value="Create Record!">
    <a href="/" class="btn btn-default">Go Back</a>
</form>
</div>